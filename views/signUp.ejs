<html>
  <head>
    <title>Sign up for this page!</title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="app.js"></script>
  </head>
  <body ng-app="flapperNews" ng-controller="SignUpControl">
    <div ng-repeat="post in posts | orderBy: '-upvotes' ">
      <span ng-click="incrementUpvotes(post) ">^</span>
      {{post.title}} - upvotes: {{post.upvotes}}  
    </div>
      <form ng-submit="addPost()">
        <input type="text" placeholder="Username" ng-model="username"></input>
        <br>
        <input type="text" placeholder="Email" ng-model="email"></input>
        <br>
        <input type="text" placeholder="Password" ng-model="password"
        <button type="submit">Post</button>
        <!-- <input type="text" ng-model="title"</input>
        <button ng-click="addPost()">Post</button> -->   
      </form>
  </body>
</html>